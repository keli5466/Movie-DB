	{{#each (limit this.results 5)}}
		<div class="content-box" data-attribute={{id}} style="background-image: url('http://image.tmdb.org/t/p/original/{{backdrop_path}}');">


			<!-- <img class="bg-image" src="http://image.tmdb.org/t/p/original{{backdrop_path}}" /> -->

			<div class="box-content">
					<!-- <img src="http://image.tmdb.org/t/p/original{{poster_path}}" /> -->
					<span class="rating">{{vote_average}}</span>
					<div class="box-info">
							<h1>{{title}}</h1>

							<div class="movie-info">
								<span class="rank">0{{math @index}}</span>
								<div class="small-detail">
									<p>release date : {{release_date}}</p>
									<p>popularity : {{popularity}}</p>
									<button class="btn" data-key={{id}}> Learn More</button>
								</div>
							</div>
							<!-- <button class="btn" data-key={{id}}> Learn More</button> -->
							<!-- <a href="https://www.youtube.com/embed/{{videos.results.0.key}}" target="_blank"> Play Trailer</a> -->
					</div>
			</div>
		</div>
	{{/each}}
